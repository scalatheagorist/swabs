<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%white([%date{ISO8601}]) [%thread] %highlight(%-5level) %cyan(%logger)| %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
